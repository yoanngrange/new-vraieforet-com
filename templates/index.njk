{% extends "_base.njk" %} 

{% block content %}
<div class="container home">

  <h1>Vraie Forêt</h1>
  <h2 class="sub">Plantation de forêt, micro-forêt, haie &amp; verger</h2>

  <br />
  <hr class="seperator" />
  <br />
  
  <a class="anchor" name="Services"></a>
  <h2>Services</h2>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 g-4">
    {% for service in services %}
    <div class="col">
      <a class="card-link" href="/services/{{service.slug}}.html">
        <div class="card h-100">
          {% if service.thumb %}
          <img
            class="card-img-top"
            src="{{service.thumb.thumbnails.large.url}}"
            loading="lazy"
            alt="{{service.name}}"
          />
          {% endif %}
          <div class="card-body">
            <h3 class="card-title">{{service.name}}</h3>
            <div class="card-text small">
              {% markdown %}
              {{service.header | truncate(200, true, "[...]")}} </p>
              {% endmarkdown %}
            </div>
            <p>
              {% for target in service.targets %}
              <span class="badge small target-label">{{target}}</span>{{ " " if not loop.last }}
              {% endfor %}
            </p>
            <button type="button" class="text-center btn btn-success">En savoir plus &raquo;</button>
          </div>
        </div>
      </a>
    </div>
    {% endfor %}
  </div>

  <br />
  <hr class="seperator" />
  <br />

  <a class="anchor" name="Methode"></a>
  <h2>Méthode</h2>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 g-4">
    {% for methode in methodes %}
    <div class="col">
      <div class="card h-100 method-card">
        {% if methode.image %}
        <img
          class=""
          src="{{methode.image.thumbnails.large.url}}"
          loading="lazy"
          alt="{{methode.name}}"
        />
        {% endif %}
        <h3 class="card-title method-title">{{methode.name}}</h3>
        <div class="card-body method-body small">
          {% markdown %}
          {{methode.text}}
          {% endmarkdown %}
        </div>
      </div>
    </div>
    {% endfor %}
  </div>

  <br />
  <hr class="seperator" />
  <br />

  <h2>Dernières réalisations</h2>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 g-4">
    {% for realisation in realisations %}
    <div class="col">
      <a class="card-link" href="/realisations/{{realisation.slug}}.html">
        <div class="card h-100">
          {% if realisation.thumb %}
            <img
              class="card-img-top"
              src="{{realisation.thumb.thumbnails.large.url}}"
              loading="lazy"
              alt="{{realisation.name}}"
            />
          {% endif %}
          <div class="card-body">  
            <h3 class="card-title">{{realisation.name}}</h3>
            <div class="card-text">
              <p><span class="badge small target-label">{{realisation.department}}</span></p>
              <button type="button" class="text-center btn btn-success btn-sm">Contexte &amp; témoignage client &raquo;</button>
            </div>
          </div>
        </div>
      </a>
    </div>
    {% endfor %}
  </div>
  <br />
  <div class="row">
    <div class="col">
      <p class="text-center">
        <a class="btn btn-lg btn-success" href="/realisations">Voir toutes les réalisations &raquo;</a>
      </p>
    </div>
  </div>  

  <br />
  <hr class="seperator" />
  <br />

  <h2>Questions Fréquentes</h2>
  <div class="row justify-content-center row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 g-4">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6">
      <div class="accordion" id="questionAccordion">
      {% for question in questionsFrequentes %}
        <div class="accordion-item">
          <h3 class="accordion-header" id="question{{question.id}}">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseQuestion{{question.id}}" aria-expanded="true" aria-controls="collapseQuestion{{question.id}}">{{question.question}}</button>
          </h3>
          <div id="collapseQuestion{{question.id}}" class="accordion-collapse collapse" aria-labelledby="question{{question.id}}">
            <div class="accordion-body">
              <p>{% markdown %}{{question.answer}}{% endmarkdown %}</p>
            </div>
          </div>
        </div>
      {% endfor %}
      </div>
    </div>
  </div>
  <br />
  <div class="row">
    <p class="text-center">
      <a class="btn btn-lg btn-success" href="/questions-frequentes">Voir toutes les questions fréquentes &raquo;</a>
    </p>
  </div>

  <br />
  <hr class="seperator" />
  <br />

  <h2>Actualités</h2>
  <p>Les 3 dernières vidéos de la <a class="green-link" href="https://www.youtube.com/channel/UC5ZooWI9T3czUWqXRfHKMCQ" target="_blank">chaîne Youtube</a></p>
  <div class="row">
    <div class="col-md-12 col-lg-4">
      <div class="ratio ratio-16x9">
        <iframe src="https://www.youtube.com/embed?listType=playlist&list=UU5ZooWI9T3czUWqXRfHKMCQ&index=1" title="YouTube video player" frameborder="0" allowfullscreen></iframe>
      </div>
    </div>
    <div class="col-md-12 col-lg-4">
      <div class="ratio ratio-16x9">
        <iframe src="https://www.youtube.com/embed?listType=playlist&list=UU5ZooWI9T3czUWqXRfHKMCQ&index=2" title="YouTube video player" frameborder="0" allowfullscreen></iframe>
      </div>
    </div>
    <div class="col-md-12 col-lg-4">
      <div class="ratio ratio-16x9">
        <iframe src="https://www.youtube.com/embed?listType=playlist&list=UU5ZooWI9T3czUWqXRfHKMCQ&index=3" title="YouTube video player" frameborder="0" allowfullscreen></iframe>
      </div>
    </div>
  </div>

  <br>
  <br>

  <p>Les 3 derniers articles du blog</p>
  <div class="row justify-content-center row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 g-4">
    {% for actualite in actualites %}
    <a class="card-link" href="/actualites/{{actualite.slug}}.html">
      <div class="col">
        <div class="card h-100">
          {% if actualite.thumb %}
          <img
            class="card-img-top"
            src="{{actualite.thumb.thumbnails.large.url}}"
            loading="lazy"
            alt="{{actualite.name}}"
          />
          {% endif %}
          <div class="card-body">
            <div class="card-text">
              <p><span class="badge small target-label">{{actualite.date}}</span></p>
            </div>
            <h3 class="card-title">{{actualite.name}}</h3>
            <div class="card-text small">
              {% markdown %}
              {{actualite.header | truncate(140, true, "[...]")}} </p>
              {% endmarkdown %}
            </div>
          </div>
        </div>
      </div>
    </a>
    {% endfor %}
  </div>
  <br />
  <div class="row">
    <p class="text-center">
      <a  class="btn btn-lg btn-success" href="/actualites">Voir toutes les actualités &raquo;</a>
    </p>
  </div>    

</div>
{% endblock %}