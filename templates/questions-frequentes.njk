{% extends "_base.njk" %} 

{% block content %}
<div class="container">

<h1>Questions fréquentes</h1>

{% for question in questionsFrequentes %}
<div>
    <h2>{{question.question}}</h2>
    <p>
        {% markdown %}
        {{question.answer}}
        {% endmarkdown %}
    </p>
</div>
{% else %}
<p>Aucune question actuellement référencée.</p>
{% endfor %} 

</div>
{% endblock %}
