{% extends "_base.njk" %} 
{% set service = row %}

{% block content %}
<div class="container">
  <h1>{{service.name}}</h1>
  {% if service.image %}
  <img
    src="{{service.image.thumbnails.large.url}}"
    loading="lazy"
  />
  {% endif %}
  {% if service.header %}
  <div>
    {% markdown %}
    {{service.header}}
    {% endmarkdown %}
  </div>
  {% endif %}
  {% if service.text %}
  <div>
    {% markdown %}
    {{service.text}}
    {% endmarkdown %}
  </div>
  {% endif %}
  <p>
    {% for target in service.targets %}
    <span>{{target}}</span>{{ "," if not loop.last }}
    {% endfor %}
  </p>
</div>
{% endblock %}